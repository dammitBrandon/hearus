<div class="pure-g-r">
  <div class="pure-u-1-3">
    &nbsp;
  </div>

<div class="pure-u-1-3">
  <% if @user %>
    <% @user.get_zipcode(@zipcode) %>
    <%= @user.rep_name %><br>
  <% else %>
    <% @user = RegularUser.new %>
    <% @user.get_zipcode(@zipcode) %>
    <%= @user.rep_name %><br>
  <% end %>
  <a class="openmodalbox" href="javascript:void(0);">
    <span class="icon-stack">
      <i class="icon-circle-blank icon-stack-base"></i>
      <i class="icon-question"></i>
    </span>
    <span class="modalboxContent">
      <h3>Zipcode Search</h3>
      If your zipcode matches a single representative, your address is not required. We respect privacy (link_to privacy_path).
    </span>
  </a>
 </div>

  <div class="pure-u-1-3">
    &nbsp;
  </div>
</div>
