 <p>&nbsp;<br>
  <%= form_tag sessions_path, :method => 'post', :class => "pure-form" do %>
    <label for="email" style="color:white;float:right;">Email</label>
    <%= text_field_tag "email", nil, :size => 12, placeholder: "Email Here", autofocus: true %>
    <label for="password", style="color:white;float:right;">Password</label>
    <%= password_field_tag "password", nil, :size => 12, placeholder: "Password Here"%>
    <%= submit_tag "Sign In", :class => "pure-button pure-button-primary" %>
  <% end %>
