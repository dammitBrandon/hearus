<div class="pricing-tables pure-g-r">
  <div class="pure-u-1-4">
    &nbsp;
  </div>

  <div class="pure-u-1-2">
    <% @user.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>

    <p>&nbsp;<br>
    <%= form_for @user, html: {class: "pure-form pure-form-stacked"} do |f| %>
      <legend>Update</legend>
      <label for="email" style="color:white;">Email</label>
      <%= f.text_field :email, placeholder: "Email", autofocus: true %>
      <label for="password" style="color:white;">Password</label>
      <%= f.password_field :password, placeholder: "Password" %>
      <label for="password_confirmation" style="color:white;">Password Confirmation</label>
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
      <%= f.submit "Submit", class: "pure-button pure-button-primary" %>
    <% end %>
  </div>

  <div class="pure-u-1-4">
    &nbsp;
  </div>
</div>
