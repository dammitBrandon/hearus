  <div class="pure-u-1-4">
    &nbsp;
  </div>

  <div class="pure-u-1-2">
    <p>&nbsp;<br>
    <a href="#" class="start-profile-tour">
      <span class="icon-stack">
        <i class="icon-circle-blank icon-stack-base"></i>
        <i class="icon-question"></i>
      </span>
    </a>
    <% @account = Account.find_by_user_id(session[:user_id]) %>
      <% if @account %>
      <p>Synchronize account number <%= @account.id %>:<br>
      <p>Account Provider: <%= @account.provider %>
      <p>Account UID: <%= @account.uid %>
      <p>Account Username: <%= @account.username %>
      <% end %>
    <p>
    <a style="text-decoration:none;" href="/auth/twitter">
    <span class="icon-stack">
      <i class="icon-check-empty icon-stack-base"></i>
      <i class="icon-twitter"></i>
    </span>
    </a>
    <a style="text-decoration:none;" href="/auth/facebook">
    <span class="icon-stack">
      <i class="icon-check-empty icon-stack-base"></i>
      <i class="icon-facebook"></i>
    </span>
    <a>
    <p>User: <%= @user.id %>
    <p>User Email: <%= @user.email %>
      <% @twitters = Account.where(provider: "twitter") %>
      <p>Tweet HearUs: <% @twitters.each do |account| %>
          <% if account.user_id == session[:user_id] %>
            @<%= account.username %><br>
            <%= account.oauth_token %><br>
            <%= account.oauth_secret %><br>
            <% twit = Twitter::Client.new(:oauth_token => account.oauth_token, :oauth_token_secret => account.oauth_secret) %>
            <%= twit.update("Tweeting from #HearUs (find your local representative online, automagically Tweet, Faceboook, call them etc. launches tomorrow)") %>
          <% end %>
        <% end %>
        <section id="tweets">
          <ul>
            <% @tweets.each do |tweet| %>
              <li><%= link_to tweet.text, "https://www.twitter.com/#{tweet.user.screen_name}" %></li>
            <% end %>
          </ul>
        </section>
  </div>

  <div class="pure-u-1-4">
    &nbsp;
  </div>
