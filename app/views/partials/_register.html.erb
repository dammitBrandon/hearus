 <p>&nbsp;<br>
   <%= form_for @user, :url => (@user.new_record? ? users_path : user_path(@user)), html: {class: "pure-form pure-form-stacked"} do |f| %>
     <label for="email" style="color:white;float:right;">Email</label>
     <%= f.text_field :email, placeholder: "Email", autofocus: true %>
     <label for="password" style="color:white;float:right;">Password</label>
     <%= f.password_field :password, placeholder: "Password" %>
     <label for="password_confirmation" style="color:white;float:right;">Password Confirmation</label>
     <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
     <%= f.submit "Register", class: "pure-button pure-button-primary" %>
   <% end %>
