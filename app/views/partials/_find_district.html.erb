 <p>&nbsp;<br>
  <%= form_tag set_districts_path, :method => 'post', :class => "pure-form pure-form-stacked" do %>
    <label for="street" style="color:white;float:right;">Street</label>
    <%= text_field_tag "address", nil, placeholder: "Street Address", autofocus: true %>
    <label for="city" style="color:white;float:right;">City</label>
    <%= text_field_tag "city", nil, placeholder: "City" %>
    <label for="state" style="color:white;float:right;">State</label>
    <%= text_field_tag "state", nil, :size => 2, :maxlength => 2, placeholder: "State" %>
    <label for="zipcode" style="color:white;float:right;">Zipcode</label>
    <%= text_field_tag "zipcode", nil, :size => 12, :maxlength => 5, placeholder: "Zipcode" %>
    <%= submit_tag "Go", :class => "pure-button pure-button-primary" %>
  <% end %>

<div id="latlng">
  <p><button onclick="geoLocate()">Show my location</button>
  &nbsp;
</div>
