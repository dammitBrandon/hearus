
 <p>&nbsp;<br>
  <%= form_tag set_districts_path, :method => 'post', :class => "pure-form pure-form-stacked" do %>
    <%= label_tag "address", "Address" %>
    <%= text_field_tag "address", nil, placeholder: "Street Address", autofocus: true%>
    <%= label_tag "city", "City" %>
    <%= text_field_tag "city", nil, placeholder: "City",  required: true %>
    <%= label_tag "state", "State" %>
    <%= text_field_tag "state", nil, :size => 2, :maxlength => 2, placeholder: "State", required: true %>
    <%= submit_tag "Go", :class => "pure-button pure-button-primary" %>
  <% end %>

  <%= render partial: "partials/geotag" %>
  <%= render partial: "partials/location_faq" %>
