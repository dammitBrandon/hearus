<%= link_to "#", class: "start-login-tour" do %>
  <span class="icon-stack">
    <i class="icon-circle-blank icon-stack-base"></i>
    <i class="icon-question"></i>
  </span>
<% end %>

<%= render partial: "partials/social_media" %>

  <%= render partial: "partials/errors" %>

  <%= form_tag sessions_path, :method => 'post', :class => "" do %>
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", nil, placeholder: "Email Address", class: "step1", autofocus: true %><br/>
    <%= label_tag "password", "Password" %>
    <%= password_field_tag "password", nil, placeholder: "Password"%>
    <%= submit_tag "Sign In", :class => "" %>
  <% end %>

